				file="rpc-3.6.tar.gz"
				desc="This plugin is a replacement for the mod_scgi webserver module."
				homepage="https://github.com/Novik/rutorrent/wiki/PluginRPC"
				unpack="tar -zxvf $file -C $TEMP_PLUGIN_DIR"
				DOWNLOAD_PLUGIN
